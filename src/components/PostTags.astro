---
import type { Post, SelectProperty } from '../lib/interfaces.ts'
import { getTagLink } from '../lib/blog-helpers.ts'
import '../styles/notion-color.css'

export interface Props {
  post: Post
  enableLink?: boolean
}

const { post, enableLink = true } = Astro.props
---

<div class="post-tags">
  {
    post.Tags &&
      post.Tags.length > 0 &&
      post.Tags.map((tag: SelectProperty) => {
        if (enableLink) {
          return (
            <a href={getTagLink(tag.name)} class={`tag ${tag.color}`}>
              {tag.name}
            </a>
          )
        }
        return <span class={`tag ${tag.color}`}>{tag.name}</span>
      })
  }
</div>

<style>
  .post-tags {
    font-size: 0.78rem;
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    margin-bottom: 0.4rem;
  }
  .post-tags a,
  .post-tags span {
    display: inline-flex;
    align-items: center;
    flex-shrink: 1;
    min-width: 0;
    border-radius: var(--radius-tag, 6px);
    border: 1px solid var(--tag-border, rgba(129, 140, 248, 0.25));
    padding: 2px 9px;
    line-height: 1.4;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--tag-color, #a5b4fc);
    background: var(--tag-bg, rgba(129, 140, 248, 0.1));
    transition:
      background 0.2s,
      border-color 0.2s;
  }
  .post-tags a:hover {
    background: var(--accent-muted, rgba(129, 140, 248, 0.2));
    border-color: var(--accent, #818cf8);
    opacity: 1;
  }
</style>
